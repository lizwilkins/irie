<h1>Buses</h1>

<table class="table">

  <tr>
    <th>License Number</th>
    <th>Capacity</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

  <% @buses.each do |bus| %>
    <tr>
      <td><%= bus.license_number %></td>
      <td><%= bus.capacity %></td>
      <td><%= bus.description %></td>
      <td><%= link_to 'Edit', edit_bus_path(bus) %></td>
      <td><%= link_to 'Delete', bus, :method => :delete, :confirm => "Are you sure you want to delete bus #{bus.license_number}?" %></td>
    </tr>
  <% end %>

</table>

<%= link_to 'Create bus', new_bus_path, :class => 'btn btn-primary' %>