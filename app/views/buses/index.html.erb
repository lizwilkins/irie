<h1>Buses</h1>

<% if can? :create, Bus %>
  <%= link_to "Create Bus", new_bus_path, :class => 'btn btn-success pull-right' %>
<% end %>

<table class="table">

  <tr>
    <th>License Number</th>
    <th>Capacity</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

  <% @buses.each do |bus| %>
    <tr>
      <td><%= bus.license_number %></td>
      <td><%= bus.capacity %></td>
      <td><%= bus.description %></td>

      <% if can? :update, bus %>
        <td><%= link_to "Edit", edit_bus_path(bus), :class => 'btn btn-mini btn-info' %></td>
      <% end %>
      <% if can? :destroy, bus %>
        <td><%= link_to "Delete", bus, :method => :delete, :class => 'btn btn-mini btn-warning', :confirm => "Are you sure you want to delete bus #{bus.license_number}?" %></td>
      <% end %>
    </tr>
  <% end %>

</table>

