<% if @bus.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% @bus.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  
<%= form_for @bus do |f| %>
  <div class="field">
    <%= f.label :license_number %><br />
    <%= f.text_field :license_number %>
  </div>
  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.select :capacity, (1..99)  %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>  
  <div class="actions"><%= f.submit 'Submit', :class => 'btn btn-primary' %></div>
<% end %>