<% provide :title, "Users" %>

<table class="table">
  <tr>
    <td><b>UserName</b></td>
    <td><b>Email</b></td>
    <td></td>
    <td></td>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Delete', user, :method => :delete, :confirm => "Are you sure you want to delete this user?" %></td>
    </tr>
  <% end %>

</table>

<%= link_to 'Create user', new_user_path, :class => 'btn btn-primary' %>

