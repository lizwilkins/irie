<% provide :title, "Users" %>

<table class="table">
  <tr>
    <td><b>UserName</b></td>
    <td><b>Email</b></td>
    <td></td>
    <td></td>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>

      <% if can? :update, @user %>
        <td><%= link_to "Edit", edit_user_path(user) %></td>
      <% end %>
      <% if can? :destroy, @user %>
        <td><%= link_to "Delete", user, :method => :delete, :confirm => "Are you sure you want to delete this user?" %></td>
      <% end %>
    </tr>
  <% end %>

</table>

<% if can? :create, User %>
  <p><%= link_to "Create user", new_user_path, :class => 'btn btn-primary' %></p>
<% end %>
