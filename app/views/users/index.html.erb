<% provide :title, "Users" %>

<% if can? :create, User %>
  <%= link_to 'Create user', new_user_path, :class => 'btn btn-success pull-right' %>
<% end %>

<table class="table">
  <tr>
    <td><b>UserName</b></td>
    <td><b>Email</b></td>
    <td>Last Name</td>
    <td>First Name</td>
    <td>Phone</td>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.last_name %></td>
      <td><%= user.first_name %></td>
      <td><%= user.phone %></td>
      <% if can? :update, @user %>
        <td><%= link_to "Edit", edit_user_path(user), :class => 'btn btn-mini btn-info'  %></td>
      <% end %>
      <% if can? :destroy, @user %>
        <td><%= link_to "Delete", user, :method => :delete, :class => 'btn btn-mini btn-warning', :confirm => "Are you sure you want to delete this user?" %></td>
      <% end %>
    </tr>
  <% end %>

</table>
