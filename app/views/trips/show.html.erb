<% provide :title, "Trips" %>

<table class="table">
  <tr>
    <td><b>Route ID</b></td>
    <td><b>Driver ID</b></td>
    <td><b>trip ID</b></td>
    <td><b>Departure</b></td>    
  </tr>
  <% @trips.each do |trip| %>
    <tr>
      <td><%= trip.route_id %></td>
      <td><%= trip.driver_id %></td>
      <td><%= trip.bus_id %></td>
      <td><%= trip.departure %></td>      
      <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
      <td><%= link_to 'Delete', trip, :method => :delete, :confirm => "Are you sure you want to delete trip?" %></td>
    </tr>
  <% end %>

</table>
