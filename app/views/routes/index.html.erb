<% provide :title, "Routes" %>

<% if can? :create, Route %>
  <%= link_to "Create route", new_route_path, :class => 'btn btn-success pull-right' %>
<% end %>
<%= will_paginate @routes %>
<table class="table">
  <tr>
    <td><b>Route Number</b></td>
    <td><b>Origin</b></td>
    <td><b>Destination</b></td>
    <td><b>Path</b></td>    
  </tr>
  <% @routes.each do |route| %>
    <tr>
      <td><%= link_to route.number, route %></td>
      <td><%= route.origin %></td>
      <td><%= route.destination %></td>
      <td><%= route.path %></td>      

      <% if can? :update, route %>
        <td><%= link_to "Edit", edit_route_path(route), :class => 'btn btn-mini btn-info'  %></td>
      <% end %>
      <% if can? :destroy, route %>
        <td><%= link_to "Delete", route, :method => :delete, :class => 'btn btn-mini btn-warning', :confirm => "Are you sure you want to delete route #{route.number}?" %></td>
      <% end %>
    </tr>
  <% end %>

</table>
