<% if @passenger.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% @passenger.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @passenger do |f| %>

    <%= f.label :trip_id %>
    <%= f.text_field :trip_id %>

    <%= f.label :rider_id %>
    <%= f.text_field :rider_id %>

  <div class="actions"><%= f.submit 'Submit', :class => 'btn btn-primary' %></div>
<% end %>