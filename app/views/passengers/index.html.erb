<% provide :title, "Passenger List" %>

<table class="table">
  <tr>
    <td><b>Trip ID</b></td>
    <td><b>Passenger ID</b></td>
  </tr>
  <% @passengers.each do |passenger| %>
    <tr>
      <td><%= passenger.trip_id %></td>
      <td><%= passenger.rider_id %></td>
      <td><%= link_to 'Delete', passenger, :method => :delete, :confirm => "Are you sure you want to delete this passenger?" %></td>
    </tr>
  <% end %>

</table>

<%= link_to 'Create passenger', new_passenger_path, :class => 'btn btn-primary' %>

