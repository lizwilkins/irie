<% provide :title, "Passenger List" %>

<table class="table">
  <tr>
    <td><b>Trip ID</b></td>
    <td><b>Passenger ID</b></td>
  </tr>
  <% @passengers.each do |passenger| %>
    <tr>
      <td><%= passenger.trip_id %></td>
      <td><%= passenger.rider_id %></td>
      <% if can? :destroy, passenger %>
        <td><%= link_to "Delete", passenger, :method => :delete, :confirm => "Are you sure you want to delete this passenger?" %></td>
      <% end %>
    </tr>
  <% end %>

</table>

<% if can? :create, Passenger %>
  <p><%= link_to "Add passenger", new_passenger_path, :class => 'btn btn-primary' %></p>
<% end %>